<?xml version="1.0" encoding="utf-8"?>

<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:local="clr-namespace:Maude"
                     x:Class="Maude.MaudeView"
                     RowDefinitions="Auto, Auto, *"
                     Padding="4,12,4,0">
        <local:MaudeChartView  Grid.Row="0"  x:Name="chartView" />
        
        
        <Border Grid.Row="0"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,0,6,0"
                Padding="12,6"
                Stroke="{x:Static local:MaudeConstants.MaudeBrandColor}"
                BackgroundColor="{x:Static local:MaudeConstants.MaudeBrandColor_Faded}"
                StrokeShape="RoundRectangle 10">
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnToggleOverlayTapped"/>
            </Border.GestureRecognizers>
            <Label Text="OVERLAY"
                   TextColor="White"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Border>

        <local:TagSelector x:Name="intervalSelector" Grid.Row="1"  Margin="0,8,0,8"/>

        <local:MaudeEventsView Grid.Row="2" x:Name="eventsView"/>
</Grid>
