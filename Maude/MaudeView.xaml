<?xml version="1.0" encoding="utf-8"?>

<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:local="clr-namespace:Maude"
                     x:Class="Maude.MaudeView"
                     RowDefinitions="Auto, Auto, *"
                     Padding="4,12,4,0">
        <Grid Grid.Row="0">
            <local:MaudeChartView x:Name="chartView" />
            <Button Text="OVERLAY"
                    Clicked="OnToggleOverlayClicked"
                    HorizontalOptions="End"
                    VerticalOptions="Start"
                    Margin="0,0,6,0"
                    Padding="12,6"
                    BackgroundColor="{AppThemeBinding Light=#f0f0f0 Dark=#2b2b2b}"
                    TextColor="{AppThemeBinding Light=#1a1a1a Dark=#f2f2f2}"
                    FontAttributes="Bold"/>
        </Grid>

        <local:TagSelector x:Name="intervalSelector" Grid.Row="1"  Margin="0,8,0,8"/>

        <local:MaudeEventsView Grid.Row="2" x:Name="eventsView"/>
</Grid>
