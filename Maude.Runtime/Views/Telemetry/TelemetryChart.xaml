<?xml version="1.0" encoding="UTF-8" ?>
<VerticalStackLayout
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:charting="clr-namespace:Ansight.Studio.UI.Controls"
    xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
    x:Class="Maude.Runtime.Views.Telemetry.TelemetryChart"
    x:Name="self_TelemetryChart">

    <charting:LegendView x:Name="legendView"
                         VerticalOptions="Center"
                         HorizontalOptions="FillAndExpand"
                         IsExpanded="True"
                         LegendItemSelected="legendView_LegendItemSelected"
                         Title="{Binding Source={x:Reference self_TelemetryChart}, Path=Title}"/>

    <skia:SKCanvasView x:Name="canvasView"
                       HeightRequest="150"
                       IgnorePixelScaling="True"
                       IsVisible="{Binding Source={x:Reference legendView}, Path=IsExpanded}"
                       PaintSurface="SKCanvasView_PaintSurface"/>

</VerticalStackLayout>

