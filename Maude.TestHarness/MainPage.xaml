<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maude="clr-namespace:Maude;assembly=Maude"
             x:Class="Maude.TestHarness.MainPage">

    <Grid>
        <ScrollView>
            <VerticalStackLayout
                Padding="24,16"
                Spacing="18">
                
                <Label
                    Text="Maude Test Harness"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />
                
                <Label
                    x:Name="StatusLabel"
                    Text="Maude runtime is inactive"
                    FontSize="14"
                    TextColor="{AppThemeBinding Light=#444444 Dark=#d5d5d5}" />

                <Border Stroke="{AppThemeBinding Light=#dcdcdc Dark=#303030}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#ffffff Dark=#1c1c1c}"
                        Padding="14,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Runtime controls"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#111111 Dark=#f5f5f5}"/>
                        <Label Text="Toggle sampling and present Maude surfaces."
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666 Dark=#bcbcbc}"/>
                        
                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Center"
                                    AlignContent="Start">
                            <Button Text="Activate" Clicked="OnActivateClicked" Margin="0,0,10,10"/>
                            <Button Text="Deactivate" Clicked="OnDeactivateClicked" Margin="0,0,10,10"/>
                            <Button Text="Trigger .NET GC" Clicked="OnTriggerGcClicked" Margin="0,0,10,10"/>
                        </FlexLayout>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Center"
                                    AlignContent="Start">
                            <Button Text="Present sheet" Clicked="OnPresentSheetClicked" Margin="0,0,10,10"/>
                            <Button Text="Toggle chart overlay" Clicked="OnPresentChartOverlayClicked" Margin="0,0,10,10"/>
                            <Button Text="Dismiss overlays" Clicked="OnDismissClicked" Margin="0,0,10,10"/>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="{AppThemeBinding Light=#dcdcdc Dark=#303030}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#ffffff Dark=#1c1c1c}"
                        Padding="14,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Memory spikes"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#111111 Dark=#f5f5f5}"/>
                        <Label Text="Allocate temporary arrays to exercise the sampler."
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666 Dark=#bcbcbc}"/>
                        
                        <Grid ColumnDefinitions="*,*,*,*"
                              ColumnSpacing="8">
                            <Button Grid.Column="0" Text="Low (4 MB)" Clicked="OnLowSpikeClicked"/>
                            <Button Grid.Column="1" Text="Medium (16 MB)" Clicked="OnMediumSpikeClicked"/>
                            <Button Grid.Column="2" Text="High (48 MB)" Clicked="OnHighSpikeClicked"/>
                            <Button Grid.Column="3" Text="Extreme (96 MB)" Clicked="OnExtremeSpikeClicked"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="{AppThemeBinding Light=#dcdcdc Dark=#303030}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#ffffff Dark=#1c1c1c}"
                        Padding="14,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Metrics + Events"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#111111 Dark=#f5f5f5}"/>
                        <Label Text="Send data to the custom channels configured for the harness."
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666 Dark=#bcbcbc}"/>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Center"
                                    AlignContent="Start">
                            <Button Text="Record custom metric" Clicked="OnRecordCustomMetricClicked" Margin="0,0,10,10"/>
                            <Button Text="Record custom event" Clicked="OnRecordCustomEventClicked" Margin="0,0,10,10"/>
                        </FlexLayout>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Center"
                                    AlignContent="Start">
                            <Button Text="Channel detached event" Clicked="OnRecordDetachedEventClicked" Margin="0,0,10,10"/>
                            <Button Text="Clear data" Clicked="OnClearDataClicked" Margin="0,0,10,10"/>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="{AppThemeBinding Light=#dcdcdc Dark=#303030}"
                        StrokeThickness="1"
                        BackgroundColor="{AppThemeBinding Light=#ffffff Dark=#1c1c1c}"
                        Padding="14,12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Navigation tests"
                               FontAttributes="Bold"
                               FontSize="16"
                               TextColor="{AppThemeBinding Light=#111111 Dark=#f5f5f5}"/>
                        <Label Text="Exercise navigation stack interactions while Maude is active."
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666 Dark=#bcbcbc}"/>

                        <FlexLayout Direction="Row"
                                    Wrap="Wrap"
                                    JustifyContent="Start"
                                    AlignItems="Center"
                                    AlignContent="Start">
                            <Button Text="Push test page" Clicked="OnPushNavigationPageClicked" Margin="0,0,10,10"/>
                            <Button Text="Push modal test page" Clicked="OnPushModalPageClicked" Margin="0,0,10,10"/>
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
