<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maude.TestHarness.NavigationTestPage"
             Title="Navigation Test">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Navigation Test Page"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Label Text="This page was pushed onto the navigation stack."
               FontSize="14"
               TextColor="{AppThemeBinding Light=#555555 Dark=#dddddd}" />
        <Button Text="Pop page" Clicked="OnPopClicked" />
    </VerticalStackLayout>
</ContentPage>
