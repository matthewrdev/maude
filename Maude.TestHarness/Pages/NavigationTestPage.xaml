<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maude.TestHarness.NavigationTestPage"
             Title="Navigation Test">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Navigation Test Page"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Label Text="This page was pushed onto the navigation stack."
               FontSize="14"
               TextColor="{AppThemeBinding Light=#555555 Dark=#dddddd}" />
        <Label Text="Large images below intentionally stress texture/memory allocations on navigation."
               FontSize="12"
               TextColor="{AppThemeBinding Light=#777777 Dark=#bbbbbb}" />
        <ScrollView HeightRequest="420">
            <VerticalStackLayout Spacing="10">
                <Image Source="https://picsum.photos/seed/maude-nav-1/1600/900"
                       Aspect="AspectFill"
                       HeightRequest="200" />
                <Image Source="https://picsum.photos/seed/maude-nav-2/1600/900"
                       Aspect="AspectFill"
                       HeightRequest="200" />
                <Image Source="https://picsum.photos/seed/maude-nav-3/1600/900"
                       Aspect="AspectFill"
                       HeightRequest="200" />
            </VerticalStackLayout>
        </ScrollView>
        <Button Text="Pop page" Clicked="OnPopClicked" />
    </VerticalStackLayout>
</ContentPage>
