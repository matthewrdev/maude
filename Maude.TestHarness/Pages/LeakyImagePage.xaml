<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maude.TestHarness.ImagePage"
             Title="Leaky Image Test">
    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Leaky Image Test"
               FontSize="18"
               FontAttributes="Bold" />
        <Label Text="Create and retain a large Skia image to simulate a leak."
               FontSize="12"
               TextColor="#666666"/>
        <Button Text="Leak Skia image" Clicked="OnLeakImageClicked"/>
        <Label x:Name="StatusLabel"
               Text="No leaks yet"
               FontSize="12"
               TextColor="#444444"/>
    </VerticalStackLayout>
</ContentPage>
