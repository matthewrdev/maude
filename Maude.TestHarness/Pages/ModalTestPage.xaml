<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maude.TestHarness.ModalTestPage"
             Title="Modal Test">
    <VerticalStackLayout Padding="24" Spacing="12">
        <Label Text="Modal Test Page"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <Label Text="This page was pushed modally onto the navigation stack."
               FontSize="14"
               TextColor="#555555" />
        <Button Text="Dismiss modal" Clicked="OnDismissClicked" />
    </VerticalStackLayout>
</ContentPage>
